<div class="container">
  <div class="row">
    <div class="span7 offset1">
      <%= form_for(@event) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :description %>
        <%= f.text_field :description %>

        <%= f.label :order %>
        <%= f.text_field :order %>

        <%= f.label :event_date %>
        <%= f.date_select :event_date %>

        <%= f.label :start_date %>
        <%= f.date_select :start_date %>

        <%= f.label :end_date %>
        <%= f.date_select :end_date, include_blank: true %>

        <%= f.label :group_id, "Cause Group for this Event" %>
        <%= select_tag 'event[group_id]', options_from_collection_for_select(Group.all, :id, :name, @event.group_id), prompt: "you must select a group" %>


        <%= f.submit button, class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  </div>
  <%= go_back %>
</div>
