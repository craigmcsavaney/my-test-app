<li>
	<% @editpath = edit_event_path(event) %>
  	<b><%= :id %>:&nbsp;</b><%= link_to event.id, @editpath %>
  	<b><%= :name %>:&nbsp;</b><%= link_to event.name, @editpath %>
  	<b><%= :description %>:&nbsp;</b><%= link_to event.description, @editpath %><br/>
  	<b><%= :order %>:&nbsp;</b><%= link_to event.order, @editpath %>
  	<b><%= :event_date %>:&nbsp;</b><%= link_to event.event_date, @editpath %>
  	<b><%= :start_date %>:&nbsp;</b><%= link_to event.start_date, @editpath %>
  	<b><%= :end_date %>:&nbsp;</b><%= link_to event.end_date, @editpath %>
  	<b><%= :group_id %>:&nbsp;</b><%= link_to event.group_id, @editpath %>
  	<b>Actions: </b><%= link_to "edit", @editpath %>&nbsp;&nbsp;
  	<%= link_to "delete", event, method: :delete,
                                  data: { confirm: "You sure?" } %>
</li>