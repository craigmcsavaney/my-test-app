<% provide(:title, 'Home') %>
<div class="container">
	<img width="800" src="../assets/horizontal.svg" style="margin: 100px auto; display: block;">
	<br/>
	<br/>
	<form name="ContactUs" action=<%= webform_url %> method="post" accept-charset="utf-8">
		<strong><h3>Contact Us</h3></strong>
		<p>
			<input type="hidden" name="publicid" value="be33dece7a77ce22229b1027653aeebe"></input>
			<input type="hidden" name="name" value="ContactUs"></input>
 			<!-- <input type="hidden" name="returnurl" value="causebutton.com:/home"></input> -->
 			<input type="hidden" name="returnurl" value="<%= request.host %>:<%= request.port %>/home"></input>
			<input id="leadsource[]" name="leadsource[]" type="hidden" value="ContactUs" />
	        <input id="leadstatus[]" name="leadstatus[]" type="hidden" value="Open" />
		</p>
		
		<p>
			<label>First Name<span style='color:red;'>*</span></label>
			<input type="text" value="" name="firstname"  required />
		</p>
		<p>
			<label>Last Name<span style='color:red;'>*</span></label>
			<input type="text" value="" name="lastname"  required />
		</p>
		<p>
			<label>Phone</label>
			<input type="text" value="" name="phone"  ></input>
		</p>
		<p>
			<label>Email<span style='color:red;'>*</span></label>
			<input type="text" value="" name="email"  required />
		</p>
		<p>
			<label>Message<span style='color:red;'>*</span></label>
<!-- 			<input type="text" value="" name="label:Message"  required="true"></input>
 -->
 			<textarea  name="label:Message" maxlength='1000' height='250' required ></textarea>
		</p>
		<p>
			<input type="submit" value="Submit" ></input>
			<input type='reset'  value='Reset' />
		</p>
	</form>
</div><!-- /.container -->
