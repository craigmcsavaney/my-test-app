<div class="container">
    <div class="row">
	    <div class="span7 offset1">
 		    <%= form_for @single, url: {action: action} do |f| %>
		      	<%= render 'shared/error_messages', object: f.object %>

		      	<%= f.label :name %>
		      	<%= f.text_field :name %>

  				<% if ["new_admin","edit_admin"].include?params[:action] %>
					<%= f.label :user_ids, "Users associated with this cause" %>
					<% if @single.users.any? %>
						<% for user in @single.users %>
							<div>
								<%= check_box_tag "single[user_ids][]", user.id, @single.users.include?(user) %>
								<%= user.email %>
							</div>
						<% end %>
					<% else %>
						There are no users associated with this Cause
						<br/>
					<% end %>
				<% end %>

				<br/>

  				<% if ["new_admin","edit_admin"].include?params[:action] %>
					<%= f.label :group_ids, "Groups that include this cause" %>
					<% if @single.groups.any? %>
						<% for group in @single.groups %>
							<div>
								<%= check_box_tag "single[group_ids][]", group.id, @single.groups.include?(group) %>
								<%= group.name %>
							</div>
						<% end %>
					<% else %>
						There are no groups that include this Cause
						<br/>
					<% end %>
				<% end %>

				<br/>
				<%= f.label :uid, "Unique Identifier (UID)" %>
		      	<%= f.text_field :uid, readonly: true, placeholder: "this will be assigned automatically" %>

				<%= f.label :type %>
		      	<%= f.text_field :type, readonly: true %>

				<%= f.label :fg_uuid, "FirstGiving Organization UUID" %>
		      	<%= f.text_field :fg_uuid %>

				<br/>

		      	<%= f.submit button, class: "btn btn-large btn-primary" %>
		    <% end %>
		</div>
	</div>
	<%= go_back %>
</div>