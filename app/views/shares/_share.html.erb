<li>
  <% @b= @c= @d= "" %>
  <% if share.cause_id? %>
    <% @b = share.cause_id %>
  <% end %>
  <% if share.post_id? %>
    <% @c = share.post_id %>
  <% end %>
  <% if !share.channel.nil? %>
    <% @d = share.channel.name %>
  <% end %>
  <% if share.confirmed? %>
    <% @a = "Yes" %>
    <% else %>
    <% @a = "no" %>
  <% end %>
  <% if share.sales.count == 0 %>
    <% @e = 0 %>
    <% else %>
    <% @e = share.sales.count %>
  <% end %>
  <% if share.serves.count == 0 %>
    <% @f = 0 %>
    <% else %>
    <% @f = share.serves.count %>
  <% end %>
	<% @editpath = edit_share_path(share) %>
  	<b><%= :id %>: </b><%= link_to share.id, @editpath %><br/>
  	<b><%= :serve_id %>: </b><%= link_to share.serve_id, @editpath %>&nbsp;&nbsp;&nbsp;
    <b><%= link_to "View Serve", serve_path(share.serve_id) %></b><br/>
  	<b><%= :channel_id %>: </b><%= link_to share.channel_id, @editpath %>&nbsp;&nbsp;&nbsp;
    <b><%= :channel_name %>: </b><%= link_to @d, @editpath %><br/>
    <b><%= :cause_id %>: </b><%= link_to @b, @editpath %><br/>
    <b><%= :link_id %>: </b><%= link_to share.link_id, @editpath %><br/>
    <b><%= :confirmed %>: </b><%= link_to @a, @editpath %><br/>
    <b><%= :post_id %>: </b><%= link_to @c, @editpath %><br/>
    <b><%= :sales_count %>: </b><%= @e %>&nbsp;&nbsp;&nbsp;
    <% if @e > 0 %>
    <b><%= link_to "View Sales", share_sales_path(share) %></b>
    <% end %>
    <br/>
    <b><%= :referrals_count %>: </b><%= @f %>&nbsp;&nbsp;&nbsp;
    <% if @f > 0 %>
    <b><%= link_to "View Referred Serves", share_serves_path(share) %></b>
    <% end %>
    <br/>
  	<b><%= :created_at %>: </b><%= link_to share.created_at, @editpath %><br/>
  	<b><%= :updated_at %>: </b><%= link_to share.updated_at, @editpath %><br/>
	<br/>
  	<b>Actions: </b><%= link_to "edit", @editpath %>&nbsp;&nbsp;
  	<%= link_to "delete", share, method: :delete,
                                  data: { confirm: "You sure?" } %>
</li>