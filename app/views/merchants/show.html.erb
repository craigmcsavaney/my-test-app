<% provide(:title, 'Show Merchant') %>
<h1>Show Merchant</h1>

<div class="container">
	<ul class="class-index">
		<%= render 'show_merchant' %>
	</ul>
	<br/>
	<% if ["show_admin"].include?params[:action] %>
			<%= link_to 'All Merchants Summary', merchants_admin_path %><br/>
		<% else %>
			<%= link_to 'All Merchants Summary', merchants_path %><br/>
	<% end %>
	<%= go_back %>
</div>